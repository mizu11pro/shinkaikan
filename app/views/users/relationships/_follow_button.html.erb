<% if current_user.following?(user) %>
		<%= link_to "フォロー中", relationships_path(user_id: user.id), method: :delete, remote: true, class: 'fas fa-user-check btn btn-success text-white' %>
<% else %>
		<%= link_to "フォロー", relationships_path(user_id: user.id), method: :post, remote: true, class: 'fas fa-user btn btn-outline-success text-white' %>
<% end %>