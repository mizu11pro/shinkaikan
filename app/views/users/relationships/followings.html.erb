<div class="back-image-2">
  <div class="followings font-color text-center mt">
    <% if @users.exists? %>
      <% if @user == current_user %>
        <h3>あなたのフォロワー</h3>
      <% else %>
        <h3><%= @user.name %> さんのフォロワー</h3>
      <% end %>
      <%= render 'relationship', users: @users %>
    <% else %>
        <h3>フォロワーは現在いません</h3>
    <% end %>
  </div>
</div>