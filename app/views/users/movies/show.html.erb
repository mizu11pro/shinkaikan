<div class="col-sm-12 back-image-2 font-color">

    <div class="row show-movie" id="movie_<%= @movie.id %>">
        <div class="col-sm-4">
            <%= attachment_image_tag @movie, :image, size: "400x400", format: 'jpeg', fallback: "no_image.png" %>
        </div>
        <div class="col-sm-8">
            <h5 class="movie-show">ジャンル / <%= @movie.genre.name %></h5>
            <div class="evaluation-list" data-score="<%= @movie.movie_comments.average(:evaluation) %>"></div>
            <h5 class="movie-show"><%= @movie.title %><span> / </span><%= @movie.directed_by %> 監督</h5>
            <div class="favorite-btn">
                <%= render 'users/favorites/favorite_button', movie: @movie %>
            </div>
            <h6 class="movie-show"><%= @movie.body %></h6>
        </div>
    </div>

    <div class="comment">
        <%= render 'users/movie_comments/movie_comment', movie: @movie, movie_comment: @movie_comment, user_comment: @user_comment %>
    </div>

</div>