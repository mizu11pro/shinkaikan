<div class="movie">
  <% @movie_search.each do |movie| %>
      <%= link_to movie_path(movie) do %>
        <%= attachment_image_tag movie, :image, size: "150x200", format: 'jpeg', fallback: "no_image.jpg" %>
      <% end %>
        <%= movie.title %>
        <%= movie.body %>
      <!--この先adminのみ表示にする-->
        <% if current_user == @user || current_user.is_admin? %>
          <%= movie.is_movie ? '表示中' : '非表示' %>
          <%= movie.genre.name %>
          <%= link_to "変更", edit_movie_path(movie) %>
          <%= link_to "削除する", movie_path(movie), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} %>
        <% end %>
  <% end %>
</div>