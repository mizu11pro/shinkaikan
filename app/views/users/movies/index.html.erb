<div class="back-image-2">
  <div class="row">
    <div class="side-menu col-lg-2 col-md-3">
      <div class="genre slide"><%= render 'genre', genres: @genres %></div>
    </div>

    <div class="movie col-lg-8 col-md-9">
      <h4 class="font-color mt">~評価ランキング~</h4>
      <div class="ranking">
          <%= render 'movie_ranking', rank_movie: @rank_movie %>
      </div>

        <% if @genre.present? %>
          <%= render 'genre_movie', movies: @genre_movies, genre: @genre %>
        <% else %>
          <%= render 'all_movie', movies: @movies %>
        <% end %>
    </div>

    <div class="side-menu col-lg-2 col-md-12">
      <div class="slide"><%= render 'users/homes/customer_index', reports: @reports %></div>
    </div>
  </div>
</div>