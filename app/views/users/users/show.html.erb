<% if user_signed_in? %>
    <% if current_user == @user || current_user.is_admin? %>
      <div class="admin-top">
        <h1>おはようadmin</h1>
      </div>
    <% else %>
      <div class="customer-top">
        <h3>ユーザ詳細</h3>
      </div>
    <% end %>
<% end %>

<div class="my-page">
  	<%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %>
		<p>name</p>
		<%= @user.name %>
		<%= link_to "変更する", edit_user_path(@user) %>

		<p>自己紹介</p>
		<%= @user.introduction %>
</div>