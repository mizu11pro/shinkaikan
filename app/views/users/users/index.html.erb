<div class="search">
  <%= form_with url: search_users_path, method: :get, local: true do |search| %>
    <%= search.text_field :search, placeholder: "ユーザ検索" %>
    <%= search.submit "検索", class: "fas fa-search" %>
  <% end %>
</div>

<div class="my-page">
	<%= render 'mypage', user: @user %>
</div>

<div class="user-list">
  <% @users.each do |user| %>
		<% if user != current_user %>
			<%= link_to user_path(user) do %>
				<%= attachment_image_tag user, :profile_image, size: "150x200", format: 'jpeg', fallback: "017c44c97a38c1c4999681e28c39271d.png" %>
			<% end %>
			<%= user.name %>

			<%= link_to "いいね一覧", user_favorites_path(user), class: 'fas fa-grin-hearts' %>
			<%= link_to "DMをする", message_path(user.id), class: 'fas fa-comments' %>
			<span id="relationships_<%= user.id %>"><%= render 'users/relationships/follow_button', user: user %></span>
			<span id="follow_count_<%= user.id %>"><%= render 'users/relationships/follow_count', user: user %></span>
		<% end %>
  <% end %>
</div>