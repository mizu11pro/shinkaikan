<div class="my-page">
  <%= link_to user_path(@user) do %>
  	<%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %>
		name / <%= @user.name %>
	<% end %>
	<%= link_to followers_path(user_id: @user.id) do %>
		<%= @user.followings.count %>follow
	<% end %>
	<span>/</span>
	<%= link_to followings_path(user_id: @user.id) do %>
		<%= @user.followers.count %>follower
	<% end %>
		<%= link_to "いいね一覧", user_favorites_path(current_user) %>
		<%= link_to "設定", edit_user_path(@user) %>
</div>

<div class="user-list">
<% @users.each do |user| %>
    <% if user != current_user %>
	    <%= attachment_image_tag user, :profile_image, size: "150x200", format: 'jpeg', fallback: "no_image.jpg" %>
	    <%= user.name %>
	    	<%= link_to followers_path(user_id: user.id) do %>
			    <%= user.followings.count %>follow
		    <% end %>
		    <span>/</span>
		    <%= link_to followings_path(user_id: user.id) do %>
			    <%= user.followers.count %>follower
		    <% end %>
	            <% if current_user.following?(user) %>
	              <%= link_to "フォローを外す", relationships_path(user_id: user.id), method: :delete %>
	            <% else %>
	              <%= link_to "フォローする", relationships_path(user_id: user.id), method: :post %>
	            <% end %>
			  		<%= link_to "いいね一覧", user_favorites_path(user) %>
     <% end %>
<% end %>
</div>