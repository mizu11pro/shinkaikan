<div class="search">
  <%= form_with url: search_users_path, method: :get, local: true do |search| %>
    <%= search.text_field :search, placeholder: "ユーザ検索" %>
    <%= search.submit "検索" %>
  <% end %>
</div>

<div class="my-page">
  <%= link_to user_path(@user) do %>
  	<%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %>
		name / <%= @user.name %>
	<% end %>
		<%= render 'users/relationships/follow_count', user: @user %>
		<%= link_to "いいね一覧", user_favorites_path(current_user) %>
		<%= link_to "設定", edit_user_path(@user) %>
</div>

<div class="user-list">
<% @users.each do |user| %>
    <% if user != current_user %>
    	<%= link_to user_path(user) do %>
	    	<%= attachment_image_tag user, :profile_image, size: "150x200", format: 'jpeg', fallback: "no_image.jpg" %>
	    <% end %>
	    <%= user.name %>
	    	<%= render 'users/relationships/follow_count', user: user %>
		    <%= render 'users/relationships/follow_button', user: user %>
			  		<%= link_to "いいね一覧", user_favorites_path(user) %>
     <% end %>
<% end %>
</div>