<h6></h6>
<%= link_to user_path(user) do %>
  	<%= attachment_image_tag user, :profile_image, size: "180x180", format: 'jpeg', fallback: "no_image.png", class: "rounded-circle mypage-image" %>
<% end %>

<h5 class="mt"><%= user.name %> さん</h5>
<div id="follow_count_<%= user.id %>"><%= render 'users/relationships/follow_count', user: user %></div>
<div class="mt"><%= link_to "いいね一覧", user_favorites_path(user), class: 'fas fa-hand-holding-heart btn btn-outline-primary text-white' %></div>

<% if user == current_user && current_user.email != "guest@user.com"  %>
	<div class="index-user-button mt">
		<%= link_to "設定", edit_user_path(user), class: 'fas fa-cogs btn btn-outline-success text-white' %>
	</div>
<% else %>
	<div>
		<label id="relationships_<%= @user.id %>" class="mt"><%= render 'users/relationships/follow_button', user: @user %></label>
		<label class="mt"><%= link_to "DMをする", message_path(@user.id), class: 'fas fa-comments btn btn-outline-success text-white' %></label>
	</div>
<% end %>

<div class="introduction font-color mt">
	<h6>/ 自己紹介 \</h6>
	<p><%= user.introduction %></p>
</div>