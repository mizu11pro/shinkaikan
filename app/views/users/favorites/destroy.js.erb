<!--show-->
$(".favorite-btn").html("<%= j(render 'users/favorites/favorite_button', movie: @movie )%>");

<!--index-->
var user_id = location.pathname.match(/\d+/);
console.log("user_id="+user_id);
var current_user_id = <%= current_user.id %>;
if (user_id != current_user_id) {
  $("#favorite-btn_<%= @movie.id %>").html("<%= j(render 'users/favorites/favorite_button', movie: @movie )%>");
}
else{
  $("#favorite-btn_<%= @movie.id %>").html("");
  $("#movie_favorite_<%= @movie.id %>").html("");
  <% if current_user.favorites.count == 0 %>
    $("#favorite-btn_<%= @movie.id %>").html("現在いいねしている映画はございません");
  <% end %>
}