<div class="card text-center col-md-3" id="movie_favorite_<%= movie.id %>">
  <div>
    <div class="card-body">
      <h5><%= movie.genre.name %></h5>
      <div class="mt">
        <% if movie.movie_comments.present? %>
          <i class="fas fa-star"></i><%= movie.movie_comments.average(:evaluation).round(1) %>
        <% end %>
        <label id="favorite-btn_<%= movie.id %>"><%= render 'favorite_button', movie: movie %></label>
      </div>
      <%= link_to movie_path(movie) do %>
        <%= attachment_image_tag movie, :image, size: "150x200", format: 'jpeg', fallback: "no_image.png" %>
      <% end %>
      <h5 class="mt"><%= movie.title %></h5>
      <h6 class="mt"><%= movie.directed_by %></h6>
      <div class="mt"><%= movie.body.truncate(25) %></div>
    </div>
  </div>
</div>