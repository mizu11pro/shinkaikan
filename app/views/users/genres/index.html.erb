<div class="new-genre">
<%= form_with model: @genre, url: genres_path, local: true do |genre| %>
    <h3>ジャンル</h3>
    <%= genre.text_field :name %>
    <%= genre.radio_button :is_genre, true, :checked => true  %>表示中
    <%= genre.radio_button :is_genre, false %>非表示
    <%= genre.submit "追加する" %>
<% end %>
</div>

<div class="genre">
    <table class="table">
      <thead>
          <tr>
              <th>ジャンル名</th>
              <th>表示 or 非表示</th>
              <th colspan="3"></th>
          </tr>
      <thead>
      <tbody>
      <% @genres.each do |genre| %>
          <tr>
              <td><%= genre.name %></td>
              <td><%= genre.is_genre ? '表示中' : '非表示' %></td>
              <td><%= link_to "変更", edit_genre_path(genre) %></td>
              <td><%= link_to "削除する", genre_path(genre), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
</div>